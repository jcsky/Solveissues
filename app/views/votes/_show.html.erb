<% current_user.role == 1 ? (v = current_user.voted_for? issue, :vote_scope => 'agent') : (v = current_user.voted_for? issue) %>
<% if v %>
   <%= link_to unsupport_issue_path(issue), :class => "btn btn-primary", :remote =>true do%>
     <%= icon("thumbs-up") %>
   <% end %>
<% else %>
   <%= link_to support_issue_path(issue), :class => "btn btn-default", :remote =>true do %>
     <%= icon("thumbs-up") %>
   <% end %>
<% end %>
